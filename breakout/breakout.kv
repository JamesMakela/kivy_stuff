#:kivy 1.10.0

<StartGameModal>:
    size_hint: 0.2, 0.3
    GridLayout:
        cols: 1
        Button:
            font_size: 70
            border: 25, 25, 25, 25
            background_color: 1, 1, 1
            text: 'Start'
            on_press: root.dismiss()
        Button:
            font_size: 70
            border: 25, 25, 25, 25
            background_color: 1, 1, 1
            text: 'Quit'
            on_press: root.quit()


<Paddle>:
    size: 150, 25
    canvas:
        Color:
            rgba: 1, .3, .8, .5
        Rectangle:
            pos: self.pos
            size: self.size


<Ball>:
    size: 40, 40
    canvas:
        Color:
            rgba: 1, 0.9, 0, .75
        Ellipse:
            pos: self.pos
            size: self.size

<Brick>
    canvas:
        Color:
            hsv: self.hue, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<BreakoutGame>:
    ball: ball
    player: player

    pos: self.pos
    size: app.window.size

    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top - 25
        text: str(root.player.score)

    Ball:
        id: ball
        center: self.parent.center

    Paddle:
        id: player
        center_x: root.center_x
        y: root.y

